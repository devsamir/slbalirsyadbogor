<div class="card">
  <div class="card-header bg-transparent">
    <h3 class="mb-0">Gallery SLB AL-Irsyad Bogor</h3>
  </div>
  <div class="card-body">
    <button
      data-toggle="modal"
      data-target="#modalTambah"
      class="btn btn-success"
    >Tambah</button>
    
    <div
      class="form-group mt-2 mb-2 d-flex flex-column justify-content-start align-items-end"
    >
      <label class="w-25">Cari</label>
      <input type="text" class="form-control w-25" id="search" />
      <small>Tekan Enter (by: Judul, Pengupload)</small>
    </div>
    <div class="table-responsive my-5">
      <table class="table table-hover" id="datatable">

      </table>
    </div>
    <div class="pagination">
      <button class="btn mx-3 hidden" id="btnBefore"><i
          class="fa fa-arrow-left"
        ></i></button>
      <span id="page"></span>
      <button class="btn mx-3" id="btnNext"><i
          class="fa fa-arrow-right"
        ></i></button>
    </div>
  </div>
</div>



<div class="modal" id="modalTambah" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Tambah Gallery</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form>
        <div class="modal-body">
          <div class="form-group">
            <label>Judul Foto <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="tambah-title" />
          </div>
          <div class="form-group">
            <label>Deskripsi Foto</label>
            <textarea cols="5" class="form-control" id="tambah-description"></textarea>
          </div>
          <div class="form-group">
            <label>Jenis Foto</label>
            <select class="form-control" id="tambah-jenis">
              <option value="Kegiatan Luar Sekolah">Kegiatan Luar Sekolah</option>
              <option value="Ekstrakulikuler">Ekstrakulikuler</option>
              <option value="Fasilitas">Fasilitas</option>
              <option value="Lain-Lain">Lain-Lain</option>
            </select>
          </div>
          <div class="form-group">
            <label>Foto <span class="text-danger">*</span></label>
            <input type="file" class="form-control" id="tambah-foto" accept=".jpg, .jpeg, .png" />
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-success"
            id="btnTambah"
          >Simpan</button>
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >Close</button>
        </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="modal" id="modalEdit" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Gallery</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form>
        <div class="modal-body">
            <input type="hidden" id="edit-id">
          <div class="form-group">
            <label>Judul Foto <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="edit-title" />
          </div>
          <div class="form-group">
            <label>Deskripsi Foto</label>
            <textarea cols="5" class="form-control" id="edit-description"></textarea>
          </div>
          <div class="form-group">
            <label>Jenis Foto</label>
            <select class="form-control" id="edit-jenis">
              <option value="Kegiatan Luar Sekolah">Kegiatan Luar Sekolah</option>
              <option value="Ekstrakulikuler">Ekstrakulikuler</option>
              <option value="Fasilitas">Fasilitas</option>
              <option value="Lain-Lain">Lain-Lain</option>
            </select>
          </div>
          <div class="form-group">
            <label>Foto <span class="text-danger">*</span></label>
            <input type="file" class="form-control" id="edit-foto" accept=".jpg, .jpeg, .png" />
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-info"
            id="btnUpdate"
          >Update</button>
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >Close</button>
        </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script type="module" src="/public/js/method/gallery.js"></script>


 